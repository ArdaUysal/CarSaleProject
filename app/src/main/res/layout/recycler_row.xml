<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="50dp"
    >
    <ImageView
        android:id="@+id/recyclerView_car_picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:background="@drawable/car_recycler1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <TextView
            android:id="@+id/recyclerView_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Başlık"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/recyclerView_txt_car_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Araba Markası"
            android:layout_marginTop="5dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/recyclerView_txt_car_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat TL"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#3F51B5" />
    </LinearLayout>

</LinearLayout>