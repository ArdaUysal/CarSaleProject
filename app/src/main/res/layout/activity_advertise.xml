<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AdvertiseActivity">

    <ImageView
        android:id="@+id/car_picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        />
    <TextView
        android:id="@+id/txt_car_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car_picture"
        android:layout_centerHorizontal="true"
        android:text="Araç Sahibi"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_car_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_car_owner_name"
        android:text="Araç markası"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txt_car_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fiyat "
        android:layout_below="@+id/txt_car_brand"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/txt_car_listing_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="İlan Tarihi "
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/txt_car_price"/>
    <TextView
        android:id="@+id/txt_car_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/txt_car_listing_date"
        android:text="Yıl"/>
    <TextView
        android:id="@+id/txt_car_fuel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/txt_car_year"
        android:text="Yakıt"/>

    <TextView
        android:id="@+id/txt_car_gear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/txt_car_fuel"
        android:text="Vites"/>
    <TextView
        android:id="@+id/txt_car_km"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/txt_car_gear"
        android:text="Kilometre"/>
    <TextView
        android:id="@+id/txt_car_owner_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/txt_car_km"
        android:text="Telefon Numarası"/>
</RelativeLayout>